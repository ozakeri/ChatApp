<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <com.gap.bis_inspection.util.CustomTextView
                android:id="@+id/txt_drivername"
                android:layout_alignParentRight="true"
                android:text="@string/label_message_dialogAttachFile_title"
                android:textColor="@color/fav"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/closeIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true">
                <ImageView
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_closedialog"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp" />
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

    </LinearLayout>

    <com.gap.bis_inspection.util.CustomTextView
        android:id="@+id/camera_VT"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_margin="5dp"
        android:text="@string/label_message_dialogAttachFile_camera"
        android:drawableRight="@drawable/ic_cameraicon"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <com.gap.bis_inspection.util.CustomTextView
        android:id="@+id/gallery_VT"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_margin="5dp"
        android:text="@string/label_message_dialogAttachFile_gallery"
        android:drawableRight="@drawable/ic_galleryicon"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <com.gap.bis_inspection.util.CustomTextView
        android:id="@+id/file_VT"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_margin="5dp"
        android:text="@string/label_message_dialogAttachFile_file"
        android:drawableRight="@drawable/ic_fileicon"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:visibility="gone"/>

</LinearLayout>